<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonSensorList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Sensor List"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPedometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedometer"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/buttonSensorList"
        app:layout_constraintTop_toBottomOf="@+id/buttonSensorList" />

    <Button
        android:id="@+id/buttonBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/buttonPedometer"
        app:layout_constraintTop_toBottomOf="@+id/buttonPedometer" />

    <Button
        android:id="@+id/buttonLocationManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Location Manager"
        android:textAllCaps="false"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/buttonBluetooth"
        app:layout_constraintTop_toBottomOf="@+id/buttonBluetooth" />
</android.support.constraint.ConstraintLayout>